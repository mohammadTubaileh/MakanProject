@model IEnumerable<Villa>



<div id="Villas" class="container-xxl py-5">
    <div class="container">
        <div class="row g-0 gx-5 align-items-end">
            <div class="col-lg-6">
                <div  class="text-start mx-auto mb-5 wow slideInLeft" data-wow-delay="0.1s">
                    <h1 class="mb-3">Villas for rent</h1>
                    <p>Best villas for rent</p>
                </div>
            </div>
            
        </div>
        <div class="tab-content">
            <div id="tab-1" class="tab-pane fade show p-0 active">
                <div class="row g-4">
                    @foreach (var item in Model)
                    {
                        <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                            <div class="property-item rounded overflow-hidden">
                                <div class="position-relative overflow-hidden">
                                    <a href=""><img class="img-fluid" src="@item.VillaImageUrl" alt=""></a>
                                    <div class="bg-primary rounded text-white position-absolute start-0 top-0 m-4 py-1 px-3">Available for rent</div>
                                    <div class="bg-white rounded-top text-primary position-absolute start-0 bottom-0 mx-4 pt-1 px-3">Villa</div>
                                </div>
                                <div class="p-4 pb-0">
                                    <h5 class="text-primary mb-3">@item.VillaPricePerNight$</h5>
                                    <a  asp-action="Details" asp-controller="Villas" asp-route-id="@item.VillaId" class="d-block h5 mb-2"  >@item.VillaName</a>
                                    <p><i class="fa fa-map-marker-alt text-primary me-2"></i>@item.VillaLocation</p>
                                </div>
                                <div class="d-flex border-top">
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-ruler-combined text-primary me-2"></i>@item.VillaNumberOfRooms</small>
                                    <small class="flex-fill text-center border-end py-2"><i class="fa fa-bed text-primary me-2"></i>@item.VillaNumberOfBathrooms</small>
                                </div>
                            </div>
                        </div>
                    }
                   
                </div>
            </div>
        </div>
    </div>
</div>
