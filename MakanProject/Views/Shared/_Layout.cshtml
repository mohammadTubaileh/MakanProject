@using Microsoft.AspNetCore.Identity;
@inject SignInManager<IdentityUser> _SignInManager


<!DOCTYPE html>
<html lang="en">

<head>
    
        
    

    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">   
    <meta content="" name="description">

    <!-- Favicon -->
    <link href="~/img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Inter:wght@700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" rel="stylesheet">
</head>

<body>
   
    <div class="container-xxl bg-white p-0">
        <!-- Spinner Start -->
        <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
        <!-- Spinner End -->
        <!-- Navbar Start -->
        <div class="container-fluid nav-bar bg-transparent">
            <nav class="navbar navbar-expand-lg bg-white navbar-light py-0 px-4">
                <a href="~/index.html" class="navbar-brand d-flex align-items-center text-center">
                    <div class="icon p-2 me-2">
                        <img class="~/img-fluid" src="~/img/icon-deal.png" alt="Icon" style="width: 30px; height: 30px;">
                    </div>
                    <a asp-action="Index" asp-controller="Home"><h1 class="m-0 text-primary">Makaan</h1></a>
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <div class="navbar-nav ms-auto">
                        <a asp-action="Index" asp-controller="Home" class="nav-item nav-link active">Home</a>
                        <a href="#About-Us" class="nav-item nav-link">About</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Property</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="#Villas" class="dropdown-item">Villa</a>
                                <a href="#Apartments" class="dropdown-item">Apartments</a>
                          
                            </div>
                        </div>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu rounded-0 m-0">
                                <a href="#Comments" class="dropdown-item">Reviews</a>
                                <a href="#Types" class="dropdown-item">Property types</a>
                            </div>
                        </div>
                        <a href="#About-Us" class="nav-item nav-link">Contact</a>
                    </div>
                   
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Add" asp-controller="Account" class="btn btn-primary px-3 d-none d-lg-flex">Add Property</a>
                        <a asp-action="Index" asp-controller="Request" class="btn btn-primary px-3 d-none d-lg-flex">Show Requests</a>
                    }else
                    @if (_SignInManager.IsSignedIn(User))
                    {
                        <a asp-action="Add" asp-controller="Account" class="btn btn-primary px-3 d-none d-lg-flex">Add Property</a>
                        <a asp-action="SendRequest" asp-controller="Request" class="btn btn-primary px-3 d-none d-lg-flex">Send to admin </a>
                    }else
                    {
                        
                    }
                </div>
            </nav>
        </div>
        <!-- Navbar End -->
        <!-- Header Start -->
        <div class="container-fluid header bg-white p-0">
            <div class="row g-0 align-items-center flex-column-reverse flex-md-row">
                <div class="col-md-6 p-5 mt-lg-5">
                    <h1 class="display-5 animated fadeIn mb-4">Discover your ideal getaway with the   <span class="text-primary">Perfect Home</span> for your next vacation</h1>

                    @if (_SignInManager.IsSignedIn(User))
                                    {
                                        <a asp-action="Logout" asp-controller="Account" class="aa-register">Logout @User.Identity!.Name</a>
                                    }else
                                    {
                                    <a asp-action="Register" asp-controller="Account" class="btn btn-success">Register</a>
                                    <a asp-action="Login" asp-controller="Account" class="btn btn-success">Login</a>
                                    }
                </div>
                <div class="col-md-6 animated fadeIn">
                    <div class="owl-carousel header-carousel">
                        <div class="owl-carousel-item">
                            <img class="img-fluid" src="img/carousel-1.jpg" alt="">
                        </div>
                        <div class="owl-carousel-item">
                            <img class="img-fluid" src="img/carousel-2.jpg" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
        
        <!-- Header End -->
    
        <!-- Category Start -->
        <div id="Types" class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <h1 class="mb-3">Property Types</h1>
                    <p>Choose Whats Your Looking For</p>
                </div>
                <div  class="row g-4">
                    <div  class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.1s">
                        <a class="cat-item d-block bg-light text-center rounded p-3" href="#Apartments">
                            <div class="rounded p-4">
                                <div  class="icon mb-3">
                                    <img class="img-fluid" src="~/img/icon-apartment.png" alt="Icon">
                                </div>
                                
                                    <h6>Apartment</h6>  
                                    <span></span>
                                
                            </div>
                        </a>
                    </div>
                    <div class="col-lg-3 col-sm-6 wow fadeInUp" data-wow-delay="0.3s">
                        <a class="cat-item d-block bg-light text-center rounded p-3" href="#Villas">
                            <div class="rounded p-4">
                                <div class="icon mb-3">
                                    <img class="img-fluid" src="~/img/icon-villa.png" alt="Icon">
                                </div>
                                <h6>Villa</h6>
                                <span></span>
                            </div>
                        </a>
                    </div>
                   
                </div>
            </div>
        </div>
        <!-- Category End -->
        
        <!-- About Start -->
        <div class="container-xxl py-5">
            <div class="container">
                <div class="row g-5 align-items-center">
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                        <div class="about-img position-relative overflow-hidden p-5 pe-0">
                            <img class="img-fluid w-100" src="~/img/about.jpg">
                        </div>
                    </div>
                    <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                        <h1 class="mb-4">#1 Place To Find The Perfect Property To Stay In For Vacation</h1>
                        <p class="mb-4">Discover the perfect home away from home—rent a villa or apartment that suits your style and enjoy unforgettable experiences.</p>
                        <p><i class="fa fa-check text-primary me-3"></i>Easy To Use</p>
                        <p><i class="fa fa-check text-primary me-3"></i>Best Prices</p>
                        <p><i class="fa fa-check text-primary me-3"></i>WorldWide</p>
                        <a class="btn btn-primary py-3 px-5 mt-3" href="">Read More</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- About End -->
        <!-- Property List Start -->
        
        <!-- Property List End -->
       
      
        <!-- Testimonial Start -->
        <div id="Comments" class="container-xxl py-5">
            <div class="container">
                <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 600px;">
                    <h1 class="mb-3">Our Clients Say!</h1>
                    <p>Review From Our Valued Clients</p>       
                </div>
                <div class="owl-carousel testimonial-carousel wow fadeInUp" data-wow-delay="0.1s">
                    <div class="testimonial-item bg-light rounded p-3">
                        <div class="bg-white border rounded p-4">
                            <p>One of the greatest websites I have ever used</p>
                            <div class="d-flex align-items-center">
                                <img class="img-fluid flex-shrink-0 rounded" src="~/img/testimonial-1.jpg" style="width: 45px; height: 45px;">
                                <div class="ps-3">
                                    <h6 class="fw-bold mb-1">Yasmine</h6>
                                    <small>It Developer</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="testimonial-item bg-light rounded p-3">
                        <div class="bg-white border rounded p-4">
                            <p>The Website was easy to use and the owners are the best</p>
                            <div class="d-flex align-items-center">
                                <img class="img-fluid flex-shrink-0 rounded" src="~/img/testimonial-2.jpg" style="width: 45px; height: 45px;">
                                <div class="ps-3">
                                    <h6 class="fw-bold mb-1">Bilal Aldweik</h6>
